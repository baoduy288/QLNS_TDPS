    Danh sách tổ trực 
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách tổ
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-2">
                            <a class="btn btn-primary" href="/To/Create/">Thêm mới</a>
                        </div>
                    </div>
                </div>
                <br/>
